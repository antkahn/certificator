{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <a href="{{ path('homepage') }}" class="label label-info">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Revenir à la page d'accueil
        </a>

        <h1>Correction</h1>

        <br>
        Vous avez <span class="label label-danger">{{ badAnswersCount }}</span> mauvaises réponses et
        <span class="label label-success">{{ goodAnswersCount }}</span> bonnes réponses.

        {% for answer in quiz.answers %}
            <hr>
            <div><strong>Question : </strong>{{ answer.question }}</div>
            <div>
                <strong>Votre réponse : </strong>{{ answer }}

                {% if answer.true %}
                    <i class="glyphicon glyphicon-ok text-success"></i>
                {% else %}
                    <i class="glyphicon glyphicon-remove text-danger"></i>
                {% endif %}
            </div>
        {% endfor %}

        <br>

        <a href="{{ path('quiz_take') }}" class="btn btn-info">
            <i class="glyphicon glyphicon-chevron-right"></i>
            Autre quiz
        </a>

        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-info">
            <i class="glyphicon glyphicon-chevron-right"></i>
            Mon profil
        </a>


    </div>

{% endblock %}
